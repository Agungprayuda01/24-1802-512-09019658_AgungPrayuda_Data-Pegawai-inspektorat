@model IEnumerable<Data_Pegawai_Inspektorat.Models.Pegawai>

@{
    ViewData["Title"] = "Index";
}

<h1>DATA PEGAWAI INSPEKTORAT</h1>

<p>
    <a asp-action="Create">Input Pegawai</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.alamat)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ttl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.path)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.alamat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ttl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.role)
            </td>
            <td>
                    <a href="@Url.Content("~/uploads/" + item.path)" class="btn btn-primary" target="_blank">View</a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Nik">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Nik">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Nik">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
